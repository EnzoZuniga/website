{
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "semicolon": [
      true,
      "always"
    ],
    "no-consecutive-blank-lines": true,
    "no-trailing-whitespace": true,
    "interface-name": true,
    "class-name": true,
    "arrow-return-shorthand": true,
    "no-duplicate-imports": true,
    "max-line-length": [
      true,
      120
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "allow-leading-underscore"
    ]
  },
  "linterOptions": {
    "exclude": [
      "!src/**/*.{js,jsx,ts,tsx}",
      "src/vendors/*.{js,jsx,ts,tsx}",
      "**/src/translations/**/*.js"
    ]
  }
}
