{
  "extends": ["tslint:recommended"],
  "rules": {
    "indent": [true, "spaces", 2],
    "variable-name": [true, "ban-keywords", "allow-leading-userscore"]
  },
  "linterOptions": {
    "exclude": [
      "!src/**/*.{js,jsx,ts,tsx}",
      "src/vendors/*.{js,jsx,ts,tsx}",
      "**/src/translations/**/*.js"
    ]
  }
}
